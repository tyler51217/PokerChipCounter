<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tyler.poker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/newicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayerCountActivity" />
        <activity android:name=".BlindActivity" />
        <activity android:name=".EnterNamesActivity" />
        <activity android:name=".ChipCounter"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>